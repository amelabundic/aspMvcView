@model aspMvcVjez91.Models.Osoba

@{
    ViewData["Title"] = "Delete";
}

<h1>Obriši osobu</h1>

<h3>Da li ste sigurni da želite da obrišete osobu?</h3>
<div>
    <h4>Osoba</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
         Ime
        </dt>
        <dd class = "col-sm-10">
            @Model.Ime
        </dd>
        <dt class = "col-sm-2">
           Prezime
        </dt>
        <dd class = "col-sm-10">
            @Model.Prezime
        </dd>
        <dt class = "col-sm-2">
           Adresa
        </dt>
        <dd class = "col-sm-10">
            @Model.Adresa
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="OsobaId" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-action="Index">Povratak na listu</a>
    </form>
</div>
